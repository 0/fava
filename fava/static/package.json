{
  "name": "fava",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -cw",
    "lint": "eslint javascript --ext .js,.svelte && stylelint 'css/*.css' --fix && npm run format",
    "format": "cd ../../ && prettier '**/*.{css,js,md,svelte}' --check --write --ignore-path .gitignore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css}": [
      "stylelint --fix",
      "git add"
    ],
    "*.{css,js,svelte,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "trailingComma": "es5",
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "svelte3"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "import/prefer-default-export": 0,
      "prefer-destructuring": [
        "error",
        {
          "object": true,
          "array": false
        }
      ],
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabelStatement",
        "WithStatement"
      ]
    },
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "rules": {
          "import/first": "off",
          "import/no-mutable-exports": "off"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order",
      "stylelint-config-prettier"
    ]
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-svelte3": "^1.2.3",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.17.1",
    "prettier-plugin-svelte": "^0.6.0",
    "rollup": "^1.14.3",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-svelte": "^5.0.3",
    "stylelint": "^10.0.1",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-recess-order": "^2.0.2",
    "stylelint-config-standard": "^18.3.0"
  },
  "dependencies": {
    "codemirror": "^5.47.0",
    "d3-array": "^2.2.0",
    "d3-axis": "^1.0.12",
    "d3-color": "^1.2.3",
    "d3-format": "^1.3.2",
    "d3-hierarchy": "^1.1.8",
    "d3-quadtree": "^1.0.6",
    "d3-scale": "^3.0.0",
    "d3-selection": "^1.3.2",
    "d3-shape": "^1.3.5",
    "d3-time-format": "^2.1.3",
    "d3-transition": "^1.2.0",
    "mousetrap": "^1.6.3",
    "svelte": "^3.4.4",
    "typeface-fira-mono": "0.0.72",
    "typeface-fira-sans": "0.0.54",
    "typeface-source-code-pro": "0.0.71",
    "typeface-source-serif-pro": "0.0.73"
  }
}
