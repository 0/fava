{
  "name": "fava",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -cw",
    "lint": "eslint javascript --fix && stylelint 'css/*.css' --fix",
    "format": "prettier '**/*.{css,js}' --write --ignore-path ../../.gitignore"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "browser": true
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order",
      "stylelint-config-prettier"
    ],
    "rules": {
      "no-descending-specificity": null
    }
  },
  "devDependencies": {
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "prettier": "^1.15.3",
    "rollup": "^0.68.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-css-only": "^0.4.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "stylelint": "^9.9.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recess-order": "^2.0.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "dependencies": {
    "@typopro/web-fira-mono": "^3.7.5",
    "@typopro/web-fira-sans": "^3.7.5",
    "@typopro/web-source-code-pro": "^3.7.5",
    "@typopro/web-source-serif-pro": "^3.7.5",
    "codemirror": "^5.42.0",
    "d3-array": "^2.0.2",
    "d3-axis": "^1.0.12",
    "d3-delaunay": "^4.1.5",
    "d3-format": "^1.3.2",
    "d3-hierarchy": "^1.1.8",
    "d3-scale": "^2.1.2",
    "d3-scale-chromatic": "^1.3.3",
    "d3-selection": "^1.3.2",
    "d3-shape": "^1.2.2",
    "d3-time-format": "^2.1.3",
    "d3-transition": "^1.1.3",
    "mousetrap": "^1.6.2"
  }
}
